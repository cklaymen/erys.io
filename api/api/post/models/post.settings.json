{
  "kind": "collectionType",
  "collectionName": "posts",
  "info": {
    "name": "post"
  },
  "options": {
    "increments": true,
    "timestamps": true
  },
  "attributes": {
    "title": {
      "type": "string",
      "required": true
    },
    "content": {
      "type": "richtext",
      "required": true
    },
    "user": {
      "plugin": "users-permissions",
      "model": "user",
      "via": "posts"
    },
    "poster": {
      "model": "file",
      "via": "related",
      "allowedTypes": [
        "images"
      ],
      "plugin": "upload",
      "required": true
    },
    "published_at": {
      "type": "datetime",
      "required": true
    },
    "tags": {
      "collection": "tag",
      "via": "posts",
      "dominant": true
    },
    "description": {
      "type": "text",
      "required": true,
      "maxLength": 255
    }
  }
}
